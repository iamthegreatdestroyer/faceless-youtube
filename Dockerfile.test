FROM python:3.11-bullseye

# Install system dependencies including FFmpeg with common codecs and
# CLI clients used by the test-runner for service health checks.
RUN apt-get update && apt-get install -y --no-install-recommends \
    gnupg \
    curl \
    ca-certificates \
    ffmpeg \
    postgresql-client \
    redis-tools \
    bash \
    && rm -rf /var/lib/apt/lists/*

# Install small networking utilities used by the test-runner for lightweight
# port-based readiness checks (avoids having to fetch large vendor packages
# like mongosh during the image build which can be flaky across registries).
RUN apt-get update && apt-get install -y --no-install-recommends \
    netcat-openbsd && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies and test tooling
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pytest pytest-asyncio pytest-cov httpx

# Copy application code and tests
COPY src/ ./src/
COPY tests/ ./tests/
COPY pytest.ini .

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Health check to ensure FFmpeg is available in image
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
    CMD ffmpeg -version || exit 1

# Default command (overridden by docker-compose when needed)
CMD ["pytest", "tests/"]