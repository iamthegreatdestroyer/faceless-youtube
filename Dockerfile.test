# Multi-stage build for efficient test runner image

# Stage 1: Builder
FROM ubuntu:22.04 as builder

RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    libx264-dev \
    libx265-dev \
    libfdk-aac-dev \
    libopus-dev \
    libvpx-dev \
    && rm -rf /var/lib/apt/lists/*

# Stage 2: Test Runner
FROM python:3.11-slim

# Copy FFmpeg binaries from builder
COPY --from=builder /usr/bin/ffmpeg /usr/bin/
COPY --from=builder /usr/lib/x86_64-linux-gnu/libx264* /usr/lib/x86_64-linux-gnu/
COPY --from=builder /usr/lib/x86_64-linux-gnu/libx265* /usr/lib/x86_64-linux-gnu/
COPY --from=builder /usr/lib/x86_64-linux-gnu/libfdk* /usr/lib/x86_64-linux-gnu/
COPY --from=builder /usr/lib/x86_64-linux-gnu/libopus* /usr/lib/x86_64-linux-gnu/
COPY --from=builder /usr/lib/x86_64-linux-gnu/libvpx* /usr/lib/x86_64-linux-gnu/

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    postgresql-client \
    mongodb-mongosh \
    redis-tools \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pytest pytest-asyncio pytest-cov httpx

# Copy application code
COPY src/ ./src/
COPY tests/ ./tests/
COPY pytest.ini .

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=5s --retries=3 \
    CMD ffmpeg -version | grep -q "ffmpeg version" || exit 1

# Default command - will be overridden by docker-compose
CMD ["pytest", "tests/"]